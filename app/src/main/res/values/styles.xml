<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <!-- Fonts -->

    <style name="TextAppearance.Bold" parent="android:TextAppearance">
        <item name="fontPath">fonts/Raleway-Bold.ttf</item>
    </style>

    <style name="TextAppearance.ExtraLight" parent="android:TextAppearance">
        <item name="fontPath">fonts/Raleway-ExtraLight.ttf</item>
    </style>

    <style name="TextAppearance.Light" parent="android:TextAppearance">
        <item name="fontPath">fonts/Raleway-Light.ttf</item>
    </style>

    <style name="TextAppearance.Medium" parent="android:TextAppearance">
        <item name="fontPath">fonts/Raleway-Medium.ttf</item>
    </style>

    <style name="TextAppearance.Regular" parent="android:TextAppearance">
        <item name="fontPath">fonts/Raleway-Regular.ttf</item>
    </style>

    <style name="TextAppearance.SemiBold" parent="android:TextAppearance">
        <item name="fontPath">fonts/Raleway-SemiBold.ttf</item>
    </style>

    <style name="TextAppearance.Thin" parent="android:TextAppearance">
        <item name="fontPath">fonts/Raleway-Thin.ttf</item>
    </style>

</resources>
